<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_peach">

    <!-- App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="User icon" />

        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="bonjour mr mohamed amin"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/icon_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Ur childs Label -->
    <TextView
        android:id="@+id/tv_ur_childs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ur childs :"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar" />

    <!-- ScrollView for children list -->
    <ScrollView
        android:id="@+id/scroll_children"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ur_childs"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/children_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Child Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:background="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/child_avatar_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="Child avatar" />

                    <TextView
                        android:id="@+id/child_name_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Chaima benty"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/child_avatar_1"
                        app:layout_constraintTop_toTopOf="@id/child_avatar_1"
                        app:layout_constraintEnd_toStartOf="@id/status_indicator_1" />

                    <TextView
                        android:id="@+id/child_location_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="tunis,centre"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/child_avatar_1"
                        app:layout_constraintTop_toBottomOf="@id/child_name_1"
                        app:layout_constraintEnd_toStartOf="@id/status_indicator_1" />

                    <View
                        android:id="@+id/status_indicator_1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/top_circle"
                        android:backgroundTint="#4CAF50"
                        app:layout_constraintEnd_toStartOf="@id/time_label_1"
                        app:layout_constraintTop_toTopOf="@id/child_name_1"
                        app:layout_constraintBottom_toBottomOf="@id/child_location_1"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/time_label_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Just now"
                        android:textColor="#4CAF50"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/child_name_1"
                        app:layout_constraintBottom_toBottomOf="@id/child_location_1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_check_profile_1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:text="check profile"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_check_map_1"
                        app:layout_constraintTop_toBottomOf="@id/child_location_1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_check_map_1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:text="check in map"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/btn_check_profile_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/child_location_1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Child Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:background="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/child_avatar_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="Child avatar" />

                    <TextView
                        android:id="@+id/child_name_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Chaima benty"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/child_avatar_2"
                        app:layout_constraintTop_toTopOf="@id/child_avatar_2"
                        app:layout_constraintEnd_toStartOf="@id/status_indicator_2" />

                    <TextView
                        android:id="@+id/child_location_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="tunis,centre"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/child_avatar_2"
                        app:layout_constraintTop_toBottomOf="@id/child_name_2"
                        app:layout_constraintEnd_toStartOf="@id/status_indicator_2" />

                    <View
                        android:id="@+id/status_indicator_2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/top_circle"
                        android:backgroundTint="#4CAF50"
                        app:layout_constraintEnd_toStartOf="@id/time_label_2"
                        app:layout_constraintTop_toTopOf="@id/child_name_2"
                        app:layout_constraintBottom_toBottomOf="@id/child_location_2"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/time_label_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Just now"
                        android:textColor="#4CAF50"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/child_name_2"
                        app:layout_constraintBottom_toBottomOf="@id/child_location_2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_check_profile_2"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:text="check profile"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_check_map_2"
                        app:layout_constraintTop_toBottomOf="@id/child_location_2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_check_map_2"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:text="check in map"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/btn_check_profile_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/child_location_2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Child Card 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:background="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/child_avatar_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="Child avatar" />

                    <TextView
                        android:id="@+id/child_name_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Chaima benty"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/child_avatar_3"
                        app:layout_constraintTop_toTopOf="@id/child_avatar_3"
                        app:layout_constraintEnd_toStartOf="@id/status_indicator_3" />

                    <TextView
                        android:id="@+id/child_location_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="tunis,centre"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/child_avatar_3"
                        app:layout_constraintTop_toBottomOf="@id/child_name_3"
                        app:layout_constraintEnd_toStartOf="@id/status_indicator_3" />

                    <View
                        android:id="@+id/status_indicator_3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/top_circle"
                        android:backgroundTint="#4CAF50"
                        app:layout_constraintEnd_toStartOf="@id/time_label_3"
                        app:layout_constraintTop_toTopOf="@id/child_name_3"
                        app:layout_constraintBottom_toBottomOf="@id/child_location_3"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/time_label_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Just now"
                        android:textColor="#4CAF50"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/child_name_3"
                        app:layout_constraintBottom_toBottomOf="@id/child_location_3" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_check_profile_3"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:text="check profile"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_check_map_3"
                        app:layout_constraintTop_toBottomOf="@id/child_location_3" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_check_map_3"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:text="check in map"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/btn_check_profile_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/child_location_3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Custom Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home Button -->
        <LinearLayout
            android:id="@+id/nav_btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_icon_home"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_home"
                android:tint="@color/orange_700"
                android:contentDescription="Home" />

            <TextView
                android:id="@+id/nav_text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@color/orange_700"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Child Button -->
        <LinearLayout
            android:id="@+id/nav_btn_child"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_icon_child"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_child"
                android:tint="#000000"
                android:contentDescription="Child" />

            <TextView
                android:id="@+id/nav_text_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Location Button -->
        <LinearLayout
            android:id="@+id/nav_btn_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_icon_location"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_location"
                android:tint="#000000"
                android:contentDescription="Location" />

            <TextView
                android:id="@+id/nav_text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Activity Button -->
        <LinearLayout
            android:id="@+id/nav_btn_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_icon_activity"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_activity"
                android:tint="#000000"
                android:contentDescription="Activity" />

            <TextView
                android:id="@+id/nav_text_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Profile Button -->
        <LinearLayout
            android:id="@+id/nav_btn_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_icon_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_profile"
                android:tint="#000000"
                android:contentDescription="Profile" />

            <TextView
                android:id="@+id/nav_text_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="profile"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
