<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAF0">

    <!-- Header with back button -->
    <LinearLayout
        android:id="@+id/header_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Retour"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profil"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Profile Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/header_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_profile_placeholder"
                android:contentDescription="Photo de profil"/>

            <!-- Name -->
            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Nom Utilisateur"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <!-- Email -->
            <TextView
                android:id="@+id/tv_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="email@example.com"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <!-- Role -->
            <TextView
                android:id="@+id/tv_profile_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Parent"
                android:textSize="14sp"
                android:textColor="#FF8C00"
                android:background="@drawable/bg_role_badge"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="DÃ©connexion"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#FF6D00"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_logout"
        app:iconTint="#FFFFFF"
        app:iconGravity="textStart"
        app:layout_constraintTop_toBottomOf="@id/card_profile_info"/>

</androidx.constraintlayout.widget.ConstraintLayout>

