<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Top decorative wave -->
        <View
            android:id="@+id/top_wave"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:background="@drawable/top_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-120dp"
            android:layout_marginEnd="-80dp" />

        <!-- Back button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:tint="@color/black" />

        <!-- Key icon -->
        <ImageView
            android:id="@+id/icon_key"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_lock_idle_lock"
            android:contentDescription="Key"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:tint="@color/orange_700" />

        <!-- Title -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/icon_key"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:gravity="center" />

        <!-- Subtitle with email -->
        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter the code sent to\ntest@example.com"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            app:layout_constraintTop_toBottomOf="@id/text_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <!-- 6-digit code container -->
        <LinearLayout
            android:id="@+id/code_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/text_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:gravity="center">

            <EditText
                android:id="@+id/code_digit_1"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_code_input"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/code_digit_2"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_code_input"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/code_digit_3"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_code_input"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/code_digit_4"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_code_input"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/code_digit_5"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_code_input"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/code_digit_6"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_code_input"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="4dp" />

        </LinearLayout>

        <!-- Resend code link -->
        <TextView
            android:id="@+id/link_resend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive the code? (67s)"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/code_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:padding="8dp" />

        <!-- New Password Label -->
        <TextView
            android:id="@+id/label_new_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Password :"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/link_resend_code"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <!-- New Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_new_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/label_new_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:endIconMode="password_toggle"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter new password"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Password Label -->
        <TextView
            android:id="@+id/label_confirm_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirm Password :"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/input_layout_new_password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Confirm Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_confirm_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/label_confirm_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:endIconMode="password_toggle"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm new password"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Reset Password Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reset_password"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Reset Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/orange_700"
            app:cornerRadius="28dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_confirm_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:enabled="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

