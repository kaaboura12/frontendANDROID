<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient">

    <!-- Top decorative wave circle (orange) -->
    <View
        android:id="@+id/top_wave"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/splash_wave_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="-150dp" />

    <!-- Logo centered -->
    <ImageView
        android:id="@+id/logo_splash"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_app_logo"
        android:contentDescription="@string/logo_desc"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Text "Weldi Win ?" -->
    <TextView
        android:id="@+id/title_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weldi Win ?"
        android:textColor="#FF8C00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:alpha="0"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/logo_splash"
        app:layout_constraintBottom_toBottomOf="@id/logo_splash"
        app:layout_constraintStart_toEndOf="@id/logo_splash" />

</androidx.constraintlayout.widget.ConstraintLayout>
